{
  "compilerOptions": {
    "allowJs": true,
    "customConditions": ["source"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "./.storybook/**/*",
    "./@types/*",
    "./app/**/*",
    "./docs/**/*",
    "./packages/**/*",
    "./vitest.config.ts",
    "./vitest.setup.ts"
  ]
}
