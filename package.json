{
  "name": "react-universal",
  "private": true,
  "workspaces": [
    "app",
    "docs",
    "packages/*",
    "sandbox/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt --no-private run build",
    "clean": "yarn workspaces foreach -Ap exec run -T del-cli dist",
    "format": "syncpack format && biome format --write . && prettier --log-level error --write \"**/*.{md,mdx,yml}\"",
    "lint": "biome lint .",
    "postinstall": "syncpack lint --dependency-types '!peer'",
    "storybook": "yarn workspace @react-universal/vite-plugin dev && storybook dev",
    "test": "vitest",
    "typecheck": "yarn tsc && yarn workspaces foreach -Apt run typecheck"
  },
  "resolutions": {
    "vite": "^7.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@chialab/esbuild-plugin-babel": "^0.18.0",
    "@emotion/jest": "^11.13.0",
    "@manypkg/cli": "^0.24.0",
    "@react-native/normalize-colors": "0.80.1",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/react-vite": "^9.0.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "~19.1.8",
    "@vitest/browser": "^3.2.4",
    "del-cli": "^6.0.0",
    "jsdom": "^26.1.0",
    "lefthook": "^1.12.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.80.1",
    "react-native-unistyles": "^2.43.0",
    "react-test-renderer": "19.1.0",
    "sort-package-json": "^3.4.0",
    "storybook": "^9.0.17",
    "syncpack": "^14.0.0-alpha.18",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.9.2"
}
