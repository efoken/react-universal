{
  "name": "@react-universal/components",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@react-universal/core": "workspace:*",
    "@tamagui/compose-refs": "^1.112.16"
  },
  "devDependencies": {
    "@types/react": "~18.3.11",
    "react": "18.3.1",
    "react-native": "0.75.4"
  },
  "peerDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "react-native": ">=0.72.6"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/*/index.ts"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "react-native": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "source": "./src/*/index.ts",
      "react-native": "./src/*/index.ts",
      "import": {
        "types": "./dist/*/index.d.mts",
        "default": "./dist/*/index.mjs"
      },
      "require": {
        "types": "./dist/*/index.d.ts",
        "default": "./dist/*/index.js"
      }
    },
    "./package.json": "./package.json"
  }
}
