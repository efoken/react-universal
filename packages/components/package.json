{
  "name": "@react-universal/components",
  "version": "1.0.0",
  "license": "MIT",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "react-native": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "source": "./src/*/index.ts",
      "react-native": "./src/*/index.ts",
      "import": {
        "types": "./dist/*/index.d.mts",
        "default": "./dist/*/index.mjs"
      },
      "require": {
        "types": "./dist/*/index.d.ts",
        "default": "./dist/*/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "react-native": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run -T tsup src/index.ts src/*/index.ts"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.2",
    "@floating-ui/react-native": "^0.10.7",
    "@react-universal/core": "workspace:*",
    "@tamagui/compose-refs": "^1.132.7"
  },
  "devDependencies": {
    "@react-universal/babel-plugin": "workspace:*",
    "@types/react": "~19.1.9",
    "react": "19.1.0",
    "react-native": "0.81.0"
  },
  "peerDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "react-native": ">=0.79.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
